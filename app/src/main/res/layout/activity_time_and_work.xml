<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86F41A70"
    tools:context=".TimeAndWork">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="376dp"
        android:layout_height="61dp"
        android:layout_above="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:text="1.Work from Days: If A can do a piece of work in n days, then A's 1 day's work = 1/n"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="#D70C1771"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Important Formulas of Time And Work :"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="378dp"
        android:layout_height="71dp"
        android:layout_above="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:text="3.Days from Work:If A's 1 day's work = 1/n , Then A can finish the work in n days."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_above="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:text="2.Ratio: If A is thrice as good a workman as B, then:
Ratio of work done by A and B = 3 : 1.
Ratio of times taken by A and B to finish a work = 1 : 3."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="391dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="127dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:gravity="left"
        android:text="Recommended Tutorials: "
        android:textColor="@color/purple_700"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="381dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="57dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/Link"
        android:textColor="#FFFFFF"
        android:textColorLink="@color/purple_700"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/round"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="Solve problems"
        android:textColor="@color/black"
        android:textColorLink="#4FC3F7" />
</RelativeLayout>